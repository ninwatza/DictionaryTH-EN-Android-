<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ninwa.dictionary.setting">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ตั้งค่าความเร็วในการอ่าน"
        android:layout_centerHorizontal="true"
        android:textSize="30dip"
        android:layout_marginTop="5dp"
        android:id="@+id/txtHead"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0/2"
        android:layout_centerHorizontal="true"
        android:textSize="20dip"
        android:layout_below="@+id/txtHead"
        android:id="@+id/txtSpeed"
        android:layout_marginTop="30dp"
        />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarSpeed"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:max="2"

        android:layout_below="@+id/txtSpeed"
        android:layout_marginTop="120dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtHeadPitch"
        android:text="ระดับเสียงอ่าน"
        android:layout_below="@+id/seekBarSpeed"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="0/2"
        android:layout_centerHorizontal="true"
        android:textSize="20dip"
        android:layout_below="@+id/txtHeadPitch"
        android:id="@+id/txtPitch"
        android:layout_marginTop="30dp"
        />


    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seekBarPitch"

        android:layout_centerHorizontal="true"
        android:max="2"

        android:layout_below="@+id/txtPitch"
        android:layout_marginTop="50dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seekBarPitch"
        android:layout_centerHorizontal="true"
        android:text="Save"
        android:layout_marginTop="20dp"
        android:id="@+id/save"
        />


</RelativeLayout>
